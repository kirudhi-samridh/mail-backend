{
  "name": "email-sync-proxy-service",
  "version": "1.0.0",
  "description": "Handles email sync, proxying requests to external email APIs, and AI features.",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "dev": "tsx watch src/app.ts",
    "dev:fast": "tsx watch --ignore=node_modules src/app.ts",
    "dev:turbo": "tsx --no-warnings src/app.ts",
    "build": "tsc",
    "start:prod": "node dist/app.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.2",
    "express": "^4.19.2",
    "googleapis": "^150.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.5",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/node-fetch": "^2.6.11",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.10.2",
    "typescript": "^5.8.3"
  }
} 