{
  "name": "email-sync-proxy-service",
  "version": "1.0.0",
  "description": "Handles email sync, proxying requests to external email APIs, and AI features.",
  "main": "src/app.ts",
  "scripts": {
    "start": "concurrently \"ts-node src/app.ts\" \"ts-node src/app_ms.ts\"",
    "dev": "concurrently \"tsx watch src/app.ts\" \"tsx watch src/app_ms.ts\"",
    "dev:fast": "concurrently \"tsx watch --ignore=node_modules src/app.ts\" \"tsx watch --ignore=node_modules src/app_ms.ts\"",
    "dev:turbo": "concurrently \"tsx --no-warnings src/app.ts\" \"tsx --no-warnings src/app_ms.ts\"",
    "start:gmail": "ts-node src/app.ts",
    "start:microsoft": "ts-node src/app_ms.ts",
    "dev:gmail": "tsx watch src/app.ts",
    "dev:microsoft": "tsx watch src/app_ms.ts",
    "build": "tsc",
    "start:prod": "concurrently \"node dist/app.js\" \"node dist/app_ms.js\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "bullmq": "^5.15.0",
    "ioredis": "^5.4.1",
    "socket.io": "^4.7.5",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.2",
    "express": "^4.19.2",
    "googleapis": "^150.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.5",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/node-fetch": "^2.6.11",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.10.2",
    "typescript": "^5.8.3"
  }
} 